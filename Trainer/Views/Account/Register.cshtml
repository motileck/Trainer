@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Trainer.Application.Aggregates.BaseUser.Commands.SignIn.SignInCommand;


<h2>@Localizer["UserReg"]</h2>
<div class="tab-content py-4">
    <div class="tab-pane active" id="doctor">
        <div class="col-md-4">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName">@Localizer["FirstName"]</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="MiddleName">@Localizer["MiddleName"]</label>
                    <input asp-for="MiddleName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="LastName">@Localizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Role">@Localizer["Role"]</label><br />
                    <select asp-for="Role" class="form-control">
                        <option value="1">@Localizer["Doctor"]</option>
                        <option value="2">@Localizer["Manager"]</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" type="password"/>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword">@Localizer["PasswordConfirm"]</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                </div>
                <button type="submit" class="btn btn-primary">@Localizer["BtnRegister"]</button>
            </form>
        </div>
    </div>
</div>
